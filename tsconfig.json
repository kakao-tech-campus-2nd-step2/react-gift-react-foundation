{
  "compilerOptions": {
    "target": "es5",  // 컴파일된 JavaScript 코드의 ECMAScript 타겟 버전
    "lib": [
      "dom",  // DOM 관련 타입 정의 포함
      "dom.iterable",  // 반복 가능한 DOM 요소에 대한 타입 정의 포함
      "esnext"  // 최신 ECMAScript 기능을 사용 가능하게 함
    ],
    "allowJs": true,  // JavaScript 파일을 프로젝트에 포함시킴
    "skipLibCheck": true,  // 성능을 향상시키기 위해 타입스크립트 선언 파일의 타입 체크를 건너뜀
    "esModuleInterop": true,  // CommonJS와 ES 모듈 간 상호 운용성 향상
    "allowSyntheticDefaultImports": true,  // export default 없는 모듈도 default import를 사용 가능하게 함
    "strict": true,  // 모든 엄격한 타입 체킹 옵션 활성화
    "forceConsistentCasingInFileNames": true,  // 파일 이름의 대소문자 일관성 강제
    "noFallthroughCasesInSwitch": true,  // switch 문에서 fallthrough를 방지
    "module": "esnext",  // 사용할 모듈 시스템 지정 (ES6+)
    "moduleResolution": "node",  // 모듈 해석 방식을 Node.js 스타일로 지정
    "resolveJsonModule": true,  // JSON 모듈을 불러올 수 있게 함
    "isolatedModules": true,  // 각 파일을 별도의 모듈로 컴파일하는 것을 강제
    "noEmit": true,  // 출력 파일 생성하지 않음 (타입 체킹만 수행)
    "jsx": "react-jsx"  // JSX 코드 변환 방식 지정, React 17+의 새 JSX 변환 사용
  },
  "include": [
    "src",  // 컴파일 과정에 포함할 파일 또는 디렉토리 지정
    "src/assets/images/*.png"
  ],
  "extends": "./tsconfig.paths.json"  // 다른 tsconfig 파일에서 경로 및 기타 설정 상속
}
